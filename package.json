{
  "name": "@fl0wo/wallet-simulator",
  "version": "1.0.1",
  "description": "Tool for tracking and simulating trades, work aswell with cryptocurrency transactions.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fl0wo/wallet-simulator.git"
  },
  "keywords": [
    "crypto",
    "wallet",
    "trading"
  ],
  "author": "Florian Sabani",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fl0wo/wallet-simulator/issues"
  },
  "homepage": "https://github.com/fl0wo/wallet-simulator#readme",
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "jest": "^29.3.1",
    "prettier": "^2.8.2",
    "ts-jest": "^29.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.4"
  }
}
